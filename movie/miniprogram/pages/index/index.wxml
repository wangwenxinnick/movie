<view class="list-item" wx:for="{{movies}}" wx:key="id"></view>
 
<h3>Upcoming Movie Events</h3>

<div class="panel">
  <div class="panel-heading">
    <h3 class="panel-title">{{ movies[0].movie_name }}</h3>
    <div class="right">
        <button type="button" class="btn-toggle-collapse"><i class="lnr lnr-chevron-up"></i></button>
    </div>
  </div>

  <div class="panel-body">
    <div class="text-center" style="margin-bottom: 20px;">
      <image> src={{ movies[0].pic }} alt="movie-event-img-8" style="max-width:150px;"></image>
    </div>
    <text>Location:{{ movies[0].location }}
    Date/Time: {{ movies[0].date }}
    Email Subject:麦芽团购 {{ movies[0].movie_name }}</text>
    <hr>
      <div class="form-group text-right">
        <button class="btn btn-info">Edit</button>
        <button id="delete-btn-8" class="btn btn-danger" onclick="deleteMovieEventHandler(8)">Delete</button>
      </div>
    </hr>
    <hr>
      <div class="form-group text-right">
        <button class="btn btn-default" style="margin-bottom: 5px">View Tickets</button>
        <button class="btn btn-success" style="margin-bottom: 5px">Send Ticket</button>
      </div>
    </hr>
    <hr>
      <div class="form-group text-right">
        <button class="btn btn-warning" style="margin-bottom: 5px"><i class="lnr lnr-envelope" style="margin-right:10px; font-size: 17px; font-weight:bold;"></i>Send Notification</button>
      </div>
    </hr>
  </div>
</div>


